                            android:id="@+id/step_txt_label11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Step 11"
                            android:textColor="@color/step_label_inactive"
                            android:textSize="@dimen/step_label_text_size" />

                        <TextView
                            android:id="@+id/step_txt_label_optional11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/step_label_optional"
                            android:textSize="@dimen/step_label_optional_text_size"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/layout_error"
            android:layout_width="match_parent"
            android:layout_height="@dimen/stepper_height"
            android:background="@color/stepper_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_error_outline" />

            <TextView
                android:id="@+id/txt_stepper_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/stepper_txt_error_margin"
                android:text="@string/stepper_error" />
        </LinearLayout>
    </FrameLayout>

    <com.technotronicsolutions.app.manualstepper.Class.NonSwipeableViewPager
        android:id="@+id/stepper_viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stepper_bottom_layout"
        android:layout_below="@+id/layout_stepper_tabRegion" />

    <RelativeLayout
        android:id="@+id/stepper_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/stepper_background">

        <Button
            android:id="@+id/stepper_btn_backwards"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="PREV"
            android:textColor="@color/stepper_backwards"
            android:textSize="@dimen/stepper_button_text_size" />

        <ProgressBar
            android:id="@+id/stepper_progress"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <Button
            android:id="@+id/stepper_btn_forwards"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="NEXT"
            android:textColor="@color/stepper_forwards"
            android:textSize="@dimen/stepper_button_text_size" />
    </RelativeLayout>
</RelativeLayout>
